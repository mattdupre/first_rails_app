<h1>Listing bigposts</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bigposts.each do |bigpost| %>
  <tr>
    <td><%= bigpost.content %></td>
    <td><%= bigpost.user_id %></td>
    <td><%= link_to 'Show', bigpost %></td>
    <td><%= link_to 'Edit', edit_bigpost_path(bigpost) %></td>
    <td><%= link_to 'Destroy', bigpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

